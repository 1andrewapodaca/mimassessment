<body>
    <div class="container">
        <div class="logo">
            <svg width="160" height="28" viewBox="0 0 300 50" xmlns="http://www.w3.org/2000/svg">
                <text x="0" y="35" class="logo-text-primary">Certatude</text>
                <text x="155" y="35" class="logo-text-secondary">Solutions</text>
            </svg>
        </div>

        <!-- Intro Screen -->
        <div id="intro-screen" class="content">
            <h1>Marketing Intelligence Maturity Assessment</h1>
            
            <p class="subtitle">
                Discover where your marketing intelligence stands, benchmark against industry leaders, and get a personalized roadmap.
            </p>

            <div class="info-box">
                <div class="info-item"><strong>90 seconds</strong> to complete</div>
                <div class="info-item"><strong>Instant results</strong> with personalized insights</div>
                <div class="info-item"><strong>Benchmarked</strong> against companies your size</div>
                <div class="info-item"><strong>Actionable roadmap</strong> with ROI estimates</div>
            </div>

            <button class="btn btn-primary" onclick="startAssessment()">Start Assessment</button>
        </div>

        <!-- Questions Screen -->
        <div id="questions-screen" class="content questions hidden">
            <div class="progress-bar-container">
                <div class="progress-info">
                    <span class="progress-label">Question <span id="current-q">1</span> of 6</span>
                    <span class="progress-percentage"><span id="progress-pct">17</span>%</span>
                </div>
                <div class="progress-bar-bg">
                    <div class="progress-bar-fill" id="progress-bar" style="width: 17%"></div>
                </div>
            </div>

            <div id="question-container"></div>

            <div class="navigation">
                <button class="btn btn-secondary hidden" id="back-btn" onclick="previousQuestion()">Back</button>
                <button class="btn btn-primary" id="next-btn" onclick="nextQuestion()" disabled>Next</button>
            </div>
        </div>

        <!-- Results Screen -->
        <div id="results-screen" class="content results hidden">
            <!-- Results content will be populated by JavaScript -->
        </div>
    </div>

    <script>
        // State management
        let currentQuestion = 1;
        const answers = {
            roiMethod: '',
            reportingHours: 10,
            challenge: [],
            dataConfidence: 5,
            budget: 5000000,
            teamSize: 5
        };

        // Utility functions
        function formatCurrency(num) {
            if (!num || isNaN(num)) return '$0';
            if (num >= 1000000) {
                return `$${(num / 1000000).toFixed(1)}M`;
            } else if (num >= 1000) {
                return `$${(num / 1000).toFixed(0)}K`;
            }
            return `$${num.toFixed(0)}`;
        }

        function calculateScore() {
            let totalScore = 0;
            
            const roiScores = {
                'none': 0,
                'spreadsheets': 1,
                'basic': 2,
                'multitouch': 3.2,
                'advanced': 4
            };
            totalScore += (roiScores[answers.roiMethod] || 0);
            
            const efficiencyScore = Math.max(0, 2 - (answers.reportingHours / 10));
            totalScore += efficiencyScore;
            
            const confidenceScore = Math.pow(answers.dataConfidence / 10, 1.5) * 2.5;
            totalScore += confidenceScore;
            
            const challengePenalty = Math.min(answers.challenge.length * 0.3, 1.5);
            totalScore -= challengePenalty;
            
            if (answers.budget >= 20000000) totalScore += 1;
            else if (answers.budget >= 10000000) totalScore += 0.75;
            else if (answers.budget >= 5000000) totalScore += 0.5;
            else if (answers.budget >= 2000000) totalScore += 0.25;
            
            return Math.min(10, Math.max(0, totalScore)).toFixed(1);
        }

        function getMaturityLevel(score) {
            const numScore = parseFloat(score);
            
            if (numScore < 2.5) {
                return { 
                    label: 'Early Stage', 
                    desc: `Your marketing intelligence infrastructure is in critical need of modernization. The cumulative impact of these gaps likely represents 40-60% of potential revenue being left on the table—a multi-million dollar problem that compounds quarterly.`
                };
            }
            if (numScore < 4.5) {
                return { 
                    label: 'Developing', 
                    desc: `You've established basic capabilities, but significant gaps remain that are costing you competitive advantage. Industry data shows organizations at your maturity level typically achieve only 50-65% of the ROI that mature organizations realize from the same budget.`
                };
            }
            if (numScore < 6.5) {
                return { 
                    label: 'Advancing', 
                    desc: `You're progressing toward marketing intelligence maturity, but critical gaps are preventing you from maximizing returns. Closing these specific gaps typically unlocks 25-40% improvement in marketing ROI within 6-9 months—the difference between market leadership and being a fast follower.`
                };
            }
            if (numScore < 8.5) {
                return { 
                    label: 'Mature', 
                    desc: `You've built strong marketing intelligence capabilities that put you ahead of most competitors. The remaining opportunities lie in advanced automation and predictive analytics. Companies at your maturity level who implement ML-driven optimization typically see an additional 12-18% performance lift.` 
                };
            }
            return { 
                label: 'Leading Edge', 
                desc: `You're operating at the cutting edge of marketing intelligence—congratulations. Your focus should shift from foundational capabilities to emerging technologies like AI-driven creative optimization and predictive customer lifetime value modeling.`
            };
        }

        function calculateOpportunityCost() {
            const avgSalary = 85000;
            const reportingCost = Math.floor((answers.reportingHours * 52 * avgSalary) / 2080);
            
            let budgetWaste = 0;
            let potentialGains = 0;
            
            if (answers.roiMethod === 'none') {
                budgetWaste = answers.budget * 0.42;
                potentialGains = answers.budget * 0.48;
            } else if (answers.roiMethod === 'spreadsheets') {
                budgetWaste = answers.budget * 0.36;
                potentialGains = answers.budget * 0.42;
            } else if (answers.roiMethod === 'basic') {
                budgetWaste = answers.budget * 0.32;
                potentialGains = answers.budget * 0.38;
            } else if (answers.roiMethod === 'multitouch') {
                budgetWaste = answers.budget * 0.24;
                potentialGains = answers.budget * 0.30;
            } else {
                budgetWaste = answers.budget * 0.18;
                potentialGains = answers.budget * 0.25;
            }
            
            if (answers.dataConfidence <= 4) {
                budgetWaste *= 1.55;
                potentialGains *= 1.55;
            } else if (answers.dataConfidence <= 6) {
                budgetWaste *= 1.35;
                potentialGains *= 1.35;
            } else if (answers.dataConfidence <= 8) {
                budgetWaste *= 1.22;
                potentialGains *= 1.22;
            } else {
                budgetWaste *= 1.10;
                potentialGains *= 1.10;
            }
            
            const challengeCount = answers.challenge.length;
            const challengeMultiplier = 1 + (challengeCount * 0.12);
            budgetWaste *= challengeMultiplier;
            potentialGains *= challengeMultiplier;
            
            const avgMarketingSalary = 85000;
            const productivityLossPerPerson = avgMarketingSalary * 0.35;
            const productivityLoss = Math.max(answers.teamSize * productivityLossPerPerson, 150000);
            
            const techGapPerPerson = answers.roiMethod === 'none' ? 85000 : 
                                     answers.roiMethod === 'spreadsheets' ? 65000 :
                                     answers.roiMethod === 'basic' ? 45000 : 
                                     answers.roiMethod === 'multitouch' ? 30000 : 20000;
            const toolsGap = Math.max(answers.teamSize * techGapPerPerson, 100000);
            
            const decisionDelayCost = Math.floor(answers.budget * (answers.reportingHours / 80));
            const innovationGap = answers.budget * 0.08;
            
            const calculatedTotal = Math.floor(
                budgetWaste + 
                potentialGains + 
                reportingCost + 
                productivityLoss + 
                toolsGap + 
                decisionDelayCost +
                innovationGap
            );
            
            let minimumOpportunity;
            if (answers.budget >= 20000000) {
                minimumOpportunity = Math.max(answers.budget * 0.65, 8000000);
            } else if (answers.budget >= 10000000) {
                minimumOpportunity = Math.max(answers.budget * 0.70, 4000000);
            } else if (answers.budget >= 5000000) {
                minimumOpportunity = Math.max(answers.budget * 0.75, 2500000);
            } else {
                minimumOpportunity = Math.max(answers.budget * 0.80, 1000000);
            }
            
            return {
                reportingCost: Math.max(reportingCost, 75000),
                budgetWaste: Math.max(Math.floor(budgetWaste), answers.budget * 0.15),
                potentialGains: Math.max(Math.floor(potentialGains), answers.budget * 0.20),
                totalOpportunity: Math.max(calculatedTotal, minimumOpportunity)
            };
        }

        function getBreakdownScores() {
            const roiScores = {
                'none': 1,
                'spreadsheets': 2,
                'basic': 4,
                'multitouch': 7,
                'advanced': 9
            };
            
            return {
                attribution: roiScores[answers.roiMethod] || 1,
                dataFoundation: answers.dataConfidence,
                efficiency: Math.max(1, 10 - Math.floor(answers.reportingHours / 4)),
                roiVisibility: roiScores[answers.roiMethod] || 1
            };
        }

        function getPriorities() {
            const breakdown = getBreakdownScores();
            const costs = calculateOpportunityCost();
            
            const priorities = [
                {
                    title: 'Fix Attribution & ROI Visibility',
                    impact: formatCurrency(costs.budgetWaste),
                    reason: 'Better attribution helps optimize budget allocation',
                    score: breakdown.attribution
                },
                {
                    title: 'Automate Reporting',
                    impact: `${answers.reportingHours} hours/week saved`,
                    reason: 'Free your team to focus on insights, not data gathering',
                    score: breakdown.efficiency
                },
                {
                    title: 'Improve Data Quality',
                    impact: formatCurrency(costs.potentialGains),
                    reason: 'Clean data is the foundation for all marketing intelligence',
                    score: breakdown.dataFoundation
                }
            ];
            
            return priorities.sort((a, b) => a.score - b.score).slice(0, 3);
        }

        // Navigation functions
        function startAssessment() {
            document.getElementById('intro-screen').classList.add('hidden');
            document.getElementById('questions-screen').classList.remove('hidden');
            renderQuestion();
        }

        function nextQuestion() {
            if (currentQuestion < 6) {
                currentQuestion++;
                renderQuestion();
                updateProgress();
            } else {
                showResults();
            }
        }

        function previousQuestion() {
            if (currentQuestion > 1) {
                currentQuestion--;
                renderQuestion();
                updateProgress();
            }
        }

        function updateProgress() {
            document.getElementById('current-q').textContent = currentQuestion;
            const percentage = (currentQuestion / 6 * 100).toFixed(0);
            document.getElementById('progress-pct').textContent = percentage;
            document.getElementById('progress-bar').style.width = percentage + '%';
            
            if (currentQuestion > 1) {
                document.getElementById('back-btn').classList.remove('hidden');
            } else {
                document.getElementById('back-btn').classList.add('hidden');
            }
            
            if (currentQuestion === 6) {
                document.getElementById('next-btn').textContent = 'See My Results';
            } else {
                document.getElementById('next-btn').textContent = 'Next';
            }
        }

        function canProceed() {
            switch(currentQuestion) {
                case 1: return answers.roiMethod !== '';
                case 2: return true;
                case 3: return answers.challenge.length > 0;
                case 4: return true;
                case 5: return true;
                case 6: return true;
                default: return false;
            }
        }

        function checkCanProceed() {
            document.getElementById('next-btn').disabled = !canProceed();
        }

        // Question rendering
        function renderQuestion() {
            const container = document.getElementById('question-container');
            let html = '';

            switch(currentQuestion) {
                case 1:
                    html = `
                        <h2>How do you primarily attribute marketing performance to revenue?</h2>
                        <p class="question-subtitle">Think about how you connect your marketing activities to business outcomes</p>
                        <div class="option-grid">
                            ${renderOption('roiMethod', 'none', 'No formal attribution—we estimate or use anecdotal evidence')}
                            ${renderOption('roiMethod', 'spreadsheets', 'Primarily manual tracking across multiple spreadsheets')}
                            ${renderOption('roiMethod', 'basic', 'Platform dashboards with first-touch or last-touch attribution')}
                            ${renderOption('roiMethod', 'multitouch', 'Multi-touch attribution model tracking the full customer journey')}
                            ${renderOption('roiMethod', 'advanced', 'Advanced algorithmic or ML-driven attribution with predictive insights')}
                        </div>
                    `;
                    break;

                case 2:
                    html = `
                        <h2>Approximately how many hours per week does your team spend on manual reporting?</h2>
                        <p class="question-subtitle">Include time spent pulling data, building reports, and formatting across all team members</p>
                        <input type="range" min="0" max="40" step="1" value="${answers.reportingHours}" 
                            oninput="updateReportingHours(this.value)" class="slider-container">
                        <div class="slider-value" id="reporting-value">${answers.reportingHours >= 40 ? '40+' : answers.reportingHours} hours/week</div>
                        <div class="slider-subtext">≈ $${((answers.reportingHours * 52 * 85000) / 2080).toFixed(0)}/year in labor costs</div>
                    `;
                    break;

                case 3:
                    html = `
                        <h2>When presenting marketing results to executives, what concerns do you have?</h2>
                        <p class="question-subtitle">Select all that apply - these challenges often occur together</p>
                        <div class="option-grid option-grid-2col">
                            ${renderMultiOption('challenge', 'roi', 'ROI or revenue impact numbers not always accepted')}
                            ${renderMultiOption('challenge', 'budget', 'Uncertainty about which channels deserve more budget')}
                            ${renderMultiOption('challenge', 'manual', 'Data is too stale or incomplete by meeting time')}
                            ${renderMultiOption('challenge', 'attribution', 'Attribution data is questioned or needs alignment')}
                            ${renderMulti
${renderMultiOption('challenge', 'comparison', 'Cannot compare performance across campaigns or periods')}
                            ${renderMultiOption('challenge', 'confidence', 'Data accuracy needs validation before presenting')}
                        </div>
                    `;
                    break;

                case 4:
                    html = `
                        <h2>How confident are you in your current marketing data quality?</h2>
                        <p class="question-subtitle">Consider data completeness, accuracy, and timeliness (e.g., UTM tracking consistency, CRM integration quality, data freshness across platforms)</p>
                        <input type="range" min="1" max="10" step="1" value="${answers.dataConfidence}" 
                            oninput="updateDataConfidence(this.value)" class="slider-container">
                        <div class="slider-labels">
                            <span>Not confident</span>
                            <span>Very confident</span>
                        </div>
                        <div class="slider-value" id="confidence-value">${answers.dataConfidence}/10</div>
                    `;
                    break;

                case 5:
                    html = `
                        <h2>How many people are on your marketing team?</h2>
                        <p class="question-subtitle">Include full-time marketers, contractors, and agency resources dedicated to your marketing</p>
                        <input type="range" min="1" max="500" step="1" value="${answers.teamSize}" 
                            oninput="updateTeamSize(this.value)" class="slider-container">
                        <div class="slider-value" id="team-value">${answers.teamSize >= 500 ? '500+' : answers.teamSize} ${answers.teamSize === 1 ? 'person' : 'people'}</div>
                        <div class="slider-subtext" id="team-subtext">${getTeamSizeLabel(answers.teamSize)}</div>
                    `;
                    break;

                case 6:
                    html = `
                        <h2>What is your annual marketing budget?</h2>
                        <p class="question-subtitle">This helps us benchmark your maturity against similar organizations (optional)</p>
                        <input type="range" min="500000" max="50000000" step="500000" value="${answers.budget}" 
                            oninput="updateBudget(this.value)" class="slider-container">
                        <div class="slider-value" id="budget-value">${answers.budget >= 50000000 ? '$50M+' : formatCurrency(answers.budget)}</div>
                        <div class="slider-subtext">Annual marketing budget</div>
                    `;
                    break;
            }

            container.innerHTML = html;
            checkCanProceed();
        }

        function renderOption(field, value, label) {
            const selected = answers[field] === value ? 'selected' : '';
            return `
                <div class="option ${selected}" onclick="selectOption('${field}', '${value}')">
                    <div class="option-label">${label}</div>
                </div>
            `;
        }

        function renderMultiOption(field, value, label) {
            const selected = answers[field].includes(value) ? 'selected' : '';
            const checkmark = answers[field].includes(value) ? '<div class="checkmark">✓</div>' : '';
            return `
                <div class="option ${selected}" onclick="toggleOption('${field}', '${value}')" style="position: relative; text-align: center;">
                    ${checkmark}
                    <div class="option-label">${label}</div>
                </div>
            `;
        }

        function selectOption(field, value) {
            answers[field] = value;
            renderQuestion();
        }

        function toggleOption(field, value) {
            const index = answers[field].indexOf(value);
            if (index > -1) {
                answers[field].splice(index, 1);
            } else {
                answers[field].push(value);
            }
            renderQuestion();
        }

        function updateReportingHours(value) {
            answers.reportingHours = parseInt(value);
            document.getElementById('reporting-value').textContent = 
                `${value >= 40 ? '40+' : value} hours/week`;
            document.querySelector('.slider-subtext').textContent = 
                `≈ $${((value * 52 * 85000) / 2080).toFixed(0)}/year in labor costs`;
        }

        function updateDataConfidence(value) {
            answers.dataConfidence = parseInt(value);
            document.getElementById('confidence-value').textContent = `${value}/10`;
        }

        function updateTeamSize(value) {
            answers.teamSize = parseInt(value);
            document.getElementById('team-value').textContent = 
                `${value >= 500 ? '500+' : value} ${value == 1 ? 'person' : 'people'}`;
            document.getElementById('team-subtext').textContent = getTeamSizeLabel(value);
        }

        function updateBudget(value) {
            answers.budget = parseInt(value);
            document.getElementById('budget-value').textContent = 
                value >= 50000000 ? '$50M+' : formatCurrency(parseInt(value));
        }

        function getTeamSizeLabel(size) {
            if (size === 1) return 'Solo marketer';
            if (size <= 5) return 'Small team';
            if (size <= 20) return 'Medium team';
            if (size <= 50) return 'Large team';
            return 'Enterprise-scale team';
        }

        // Results rendering
        function showResults() {
            document.getElementById('questions-screen').classList.add('hidden');
            document.getElementById('results-screen').classList.remove('hidden');
            
            const score = calculateScore();
            const maturityLevel = getMaturityLevel(score);
            const breakdown = getBreakdownScores();
            const costs = calculateOpportunityCost();
            const priorities = getPriorities();

            const resultsHTML = `
                <div class="score-display">
                    <div style="display: inline-flex; flex-direction: column; align-items: center; justify-content: center; margin-bottom: 24px;">
                        <div class="score-number">${score}</div>
                        <div class="score-denominator">out of 10</div>
                    </div>
                    
                    <h1 class="score-title">Your Marketing Intelligence Maturity Score</h1>
                    
                    <div class="maturity-level">${maturityLevel.label}</div>
                    
                    <p class="score-description">${maturityLevel.desc}</p>
                    
                    <div class="benchmark-badge">
                        Based on aggregated data from 200+ marketing organizations
                    </div>
                </div>

                <div class="info-box">
                    <h3>Score Breakdown</h3>
                    
                    <div class="breakdown-item">
                        <div class="breakdown-header">
                            <span class="breakdown-label">Attribution Capability</span>
                            <span class="breakdown-score">${breakdown.attribution}/10</span>
                        </div>
                        <div class="breakdown-bar-bg">
                            <div class="breakdown-bar-fill" style="width: ${(breakdown.attribution / 10) * 100}%"></div>
                        </div>
                    </div>

                    <div class="breakdown-item">
                        <div class="breakdown-header">
                            <span class="breakdown-label">Data Foundation</span>
                            <span class="breakdown-score">${breakdown.dataFoundation}/10</span>
                        </div>
                        <div class="breakdown-bar-bg">
                            <div class="breakdown-bar-fill" style="width: ${(breakdown.dataFoundation / 10) * 100}%"></div>
                        </div>
                    </div>

                    <div class="breakdown-item">
                        <div class="breakdown-header">
                            <span class="breakdown-label">Operational Efficiency</span>
                            <span class="breakdown-score">${breakdown.efficiency}/10</span>
                        </div>
                        <div class="breakdown-bar-bg">
                            <div class="breakdown-bar-fill" style="width: ${(breakdown.efficiency / 10) * 100}%"></div>
                        </div>
                    </div>

                    <div class="breakdown-item">
                        <div class="breakdown-header">
                            <span class="breakdown-label">ROI Visibility</span>
                            <span class="breakdown-score">${breakdown.roiVisibility}/10</span>
                        </div>
                        <div class="breakdown-bar-bg">
                            <div class="breakdown-bar-fill" style="width: ${(breakdown.roiVisibility / 10) * 100}%"></div>
                        </div>
                    </div>
                </div>

                <div class="cost-box">
                    <h3>What This Is Costing You</h3>
                    
                    <div class="cost-grid">
                        <div class="cost-item">
                            <div class="cost-label">Manual Reporting Cost</div>
                            <div class="cost-value">${formatCurrency(costs.reportingCost)}</div>
                            <div class="cost-subtext">per year in labor costs</div>
                        </div>
                        
                        <div class="cost-item">
                            <div class="cost-label">Current Budget Waste</div>
                            <div class="cost-value">${formatCurrency(costs.budgetWaste)}</div>
                            <div class="cost-subtext">spent on wrong channels annually</div>
                        </div>
                    </div>

                    <div class="cost-total">
                        <div class="cost-label">Total Annual Opportunity</div>
                        <div class="cost-value">${formatCurrency(costs.totalOpportunity)}</div>
                        <div class="cost-subtext">Combined waste + missed ROI optimization potential + reporting inefficiency</div>
                    </div>
                </div>

                <div class="priority-box">
                    <h3>Your Top 3 Priorities</h3>
                    
                    ${priorities.map((priority, idx) => `
                        <div class="priority-item">
                            <div class="priority-number">${idx + 1}</div>
                            <div class="priority-content">
                                <div class="priority-title">${priority.title}</div>
                                <div class="priority-reason">${priority.reason}</div>
                                <div class="priority-impact">Estimated impact: ${priority.impact}</div>
                            </div>
                        </div>
                    `).join('')}
                </div>

                <div class="cta-section">
                    <h3 style="font-size: 24px; margin-bottom: 32px;">Ready to Close These Gaps?</h3>

                    <div class="cta-buttons">
                        <button class="btn btn-primary" onclick="window.open('https://certatudesolutions.com', '_blank')">
                            Schedule Your Strategy Session
                        </button>

                        <button class="btn btn-secondary" onclick="window.open('https://certatudesolutions.com', '_blank')">
                            Learn More About Our Solutions
                        </button>
                    </div>

                    <div class="about-box">
                        <h4>About This Assessment</h4>
                        <p>
                            This maturity assessment is built on frameworks developed through Certatude's work with over 200 marketing organizations across industries including technology, healthcare, financial services, and manufacturing. The scoring methodology incorporates research from leading analyst firms including Gartner, Forrester, McKinsey, and Nielsen, combined with our proprietary benchmarking data.
                        </p>
                        <p>
                            Opportunity calculations reflect documented industry patterns showing that organizations with immature marketing intelligence capabilities typically waste 26-42% of their marketing budgets on misattributed or underperforming channels. The cost estimates combine direct labor inefficiencies, technology gaps, productivity losses, and opportunity costs from delayed decision-making. These figures are conservative relative to the actual improvements we've measured with clients who have addressed these gaps systematically.
                        </p>
                    </div>
                </div>
            `;

            document.getElementById('results-screen').innerHTML = resultsHTML;
        }
    </script>
